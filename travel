    <script>
        // Unsplash and OpenWeatherMap API integration
        const unsplashAccessKey = 'DEMO_KEY'; // Replace with your Unsplash API key
        const weatherAPIKey = '439d4b804bc8187953eb36d2a8c26a02'; // OpenWeatherMap demo key
        const placesWeather = {
            'European Mountain': {lat:10.8505, lon:76.2711, desc:'Experiencing the Chillful Nature. Next: Kerala'},
            'Finnish Seaside': {lat:60.1699, lon:24.9384, desc:'The Silent, Flowing Chill. Next: Bali'},
            'Czech Highlands': {lat:49.8175, lon:15.4730, desc:'Nature Across Cities. Next: Prague'},
            'Eastern Europe': {lat:52.2297, lon:21.0122, desc:'Experiencing the Culture. Next: Warsaw'},
            'European Fjord': {lat:68.2222, lon:14.3700, desc:'Lonely Chill Beyond Mountains. Next: Lofoten, Norway'},
            'European Mosaic': {lat:42.6507, lon:18.0944, desc:'Nature & Local Vibes. Next: Dubrovnik'},
            'Europe in Arctics': {lat:64.9631, lon:-19.0208, desc:'Nature in Harshness. Next: Iceland'},
            'European Nice Corner': {lat:47.3769, lon:8.5417, desc:'Travel & Explore. Next: Zurich'},
            'France': {lat:48.8566, lon:2.3522, desc:'Experience the romance of Paris, the beauty of the French Riviera, and the charm of Provence.'},
            'Japan': {lat:35.6895, lon:139.6917, desc:'Discover cherry blossoms, ancient temples, and the vibrant city life of Tokyo.'},
            'Brazil': {lat:-22.9068, lon:-43.1729, desc:'Enjoy the vibrant culture, beautiful beaches, and the famous Christ the Redeemer statue in Rio de Janeiro.'},
            'Australia': {lat:-33.8688, lon:151.2093, desc:'Discover the iconic Sydney Opera House, beautiful beaches, and vibrant Australian culture.'},
            'South Africa': {lat:-33.9249, lon:18.4241, desc:'Marvel at Table Mountain, stunning coastlines, and rich history in Cape Town.'},
            'USA': {lat:40.7128, lon:-74.0060, desc:'Visit Times Square, Central Park, and enjoy world-class shopping and food in New York.'},
            'India': {lat:27.1751, lon:78.0421, desc:'A land of vibrant culture, history, and diversity. Visit the Taj Mahal, explore bustling cities, and enjoy delicious Indian cuisine.'},
            'Italy': {lat:41.9028, lon:12.4964, desc:'Explore the art, history, and cuisine of Rome, Florence, and Venice.'}
        };

        // Modal logic for details
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('click', function(e) {
                if (e.target.tagName === 'INPUT') return; // Don't open modal when clicking checkbox
                const place = card.getAttribute('data-place');
                // Fetch Unsplash image
                fetch(`https://api.unsplash.com/search/photos?query=${encodeURIComponent(place)}&client_id=${unsplashAccessKey}&orientation=landscape&per_page=1`)
                    .then(r => r.json())
                    .then(imgData => {
                        let imgUrl = imgData.results && imgData.results[0] ? imgData.results[0].urls.regular : 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80';
                        // Fetch weather
                        fetch(`https://openweathermap.org/data/2.5/weather?lat=${placesWeather[place].lat}&lon=${placesWeather[place].lon}&appid=${weatherAPIKey}&units=metric`)
                            .then(r => r.json())
                            .then(data => {
                                let weather = (data.weather && data.main) ? `${data.weather[0].main}, ${Math.round(data.main.temp)}°C` : 'Weather: ...';
                                document.getElementById('modalImageWrap').innerHTML = `<img src='${imgUrl}' alt='${place}' style='width:100%;border-radius:8px;margin-bottom:1em;'>`;
                                document.getElementById('modalPlace').innerHTML = `<h2 style='color:#2193b0;'>${place}</h2><p style='color:#333;font-size:1.1em;'>${placesWeather[place].desc}</p>`;
                                document.getElementById('modalWeather').innerHTML = `<div style='margin:1em 0;color:#2193b0;font-weight:bold;'>${weather}</div>`;
                                let mapQuery = encodeURIComponent(place);
                                document.getElementById('modalMap').innerHTML = `<iframe width="100%" height="250" style="border-radius:8px;border:none;" src="https://maps.google.com/maps?q=${mapQuery}&t=&z=13&ie=UTF8&iwloc=&output=embed"></iframe>`;
                                document.getElementById('detailModal').style.display = 'flex';
                            });
                    })
                    .catch(() => {
                        // Fallback image if Unsplash fails
                        let imgUrl = 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=80';
                        fetch(`https://openweathermap.org/data/2.5/weather?lat=${placesWeather[place].lat}&lon=${placesWeather[place].lon}&appid=${weatherAPIKey}&units=metric`)
                            .then(r => r.json())
                            .then(data => {
                                let weather = (data.weather && data.main) ? `${data.weather[0].main}, ${Math.round(data.main.temp)}°C` : 'Weather: ...';
                                document.getElementById('modalImageWrap').innerHTML = `<img src='${imgUrl}' alt='${place}' style='width:100%;border-radius:8px;margin-bottom:1em;'>`;
                                document.getElementById('modalPlace').innerHTML = `<h2 style='color:#2193b0;'>${place}</h2><p style='color:#333;font-size:1.1em;'>${placesWeather[place].desc}</p>`;
                                document.getElementById('modalWeather').innerHTML = `<div style='margin:1em 0;color:#2193b0;font-weight:bold;'>${weather}</div>`;
                                let mapQuery = encodeURIComponent(place);
                                document.getElementById('modalMap').innerHTML = `<iframe width="100%" height="250" style="border-radius:8px;border:none;" src="https://maps.google.com/maps?q=${mapQuery}&t=&z=13&ie=UTF8&iwloc=&output=embed"></iframe>`;
                                document.getElementById('detailModal').style.display = 'flex';
                            });
                    });
            });
        });
        document.getElementById('closeModal').onclick = function() {
            document.getElementById('detailModal').style.display = 'none';
        };

        // Submit logic
        document.getElementById('placesForm').onsubmit = function(e) {
            e.preventDefault();
            const checked = Array.from(document.querySelectorAll('input[name="places"]:checked')).map(cb => cb.value);
            const result = document.getElementById('result');
            if (checked.length > 0) {
                result.innerHTML = `You have chosen to visit: <b>${checked.join(', ')}</b>.<br> Enjoy your trip ! Start planning your adventure now.`;
            } else {
                result.innerHTML = 'Please select at least one place to visit!';
            }
        };
    </script>
</body>
