            <div class="modal-content" id="modalContent">
                <button class="close" id="closeModal" title="Back">&#8592;</button>
                <div style="flex:1;min-width:220px;max-width:260px;" id="modalImageWrap"></div>
                <div style="flex:2;min-width:220px;" id="modalInfoWrap">
                    <div id="modalPlace"></div>
                    <div id="modalWeather"></div>
                    <div id="modalMap" style="margin-top:1em;"></div>
                </div>
